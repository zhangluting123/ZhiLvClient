<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"/>
    <EditText
        android:id="@+id/edt_input_phoneOrEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/regist_edit_background"
        android:hint="请输入手机号 / 邮箱账号"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/regist_edit_background"
            android:hint="请输入密码"/>
        <ImageView
            android:id="@+id/iv_eye"
            android:layout_centerInParent="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/biyanjing"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login_in"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/btn_submit"
        android:text="登录"/>

    <TextView
        android:id="@+id/tv_fgpwd"
        android:layout_gravity="center"
        android:textColor="@color/MyThemeColor"
        android:textSize="15sp"
        android:text="忘记密码？"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="没有账号？"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sign_up"
            android:text="立即注册"
            android:textColor="@color/MyThemeColor"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>