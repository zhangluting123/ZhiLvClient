<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="10dp"/>
            <!-- 内容填充颜色-->
            <solid android:color="#00000000"/>
            <!-- 设置边框宽度，颜色值-->
            <stroke
                android:width="0.5px"
                android:color="@color/brown_deep"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>