<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@mipmap/logo_back">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_more_detail_btnSubmit"
                android:textSize="18sp"
                android:text="完成"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="#00000000"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 完善出行信息让游记内容更丰富"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/brown_light"/>
        <RelativeLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="出行目的地"/>
            <EditText
                android:id="@+id/add_more_detail_et_destination"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="河北"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="出行方式"/>
            <TextView
                android:id="@+id/add_more_detail_et_traffic"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="14sp"
                android:textColorHint="@color/design_default_color_secondary_variant"
                android:background="@null"
                android:hint="选择出行"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="出发日期"/>
            <TextView
                android:id="@+id/add_more_detail_et_beginDate"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="14sp"
                android:textColorHint="@color/design_default_color_secondary_variant"
                android:background="@null"
                android:hint="选择出发日期"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="出行天数/天"/>
            <EditText
                android:id="@+id/add_more_detail_et_days"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="14sp"
                android:textColorHint="@color/design_default_color_secondary_variant"
                android:background="@null"
                android:hint="输入天数"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="人物"/>
            <TextView
                android:id="@+id/add_more_detail_et_people"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="14sp"
                android:textColorHint="@color/design_default_color_secondary_variant"
                android:background="@null"
                android:hint="选择人物"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="人均花费/RMB"/>
            <EditText
                android:id="@+id/add_more_detail_et_money"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="14sp"
                android:textColorHint="@color/design_default_color_secondary_variant"
                android:background="@null"
                android:hint="输入金额"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>