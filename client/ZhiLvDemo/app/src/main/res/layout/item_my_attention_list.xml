<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/attention_iv_userHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/home_head_default"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/attention_tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="张三"/>

            <TextView
                android:id="@+id/attention_tv_userSign"
                android:layout_width="150dp"
                android:maxLines="1"
                android:maxEms="15"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="一颗会思想的芦苇"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/attention_btn_remove"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_attention"
        android:text="已关注"
        android:textColor="@color/MyThemeColor"
        android:textSize="13sp" />
</RelativeLayout>