<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="12dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="14dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_scene_path"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_default"/>
            <LinearLayout
                android:layout_toRightOf="@id/iv_scene_path"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/tv_scene_place"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="scene name"
                    android:textColor="@android:color/black"/>
                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/brown_light" />
                <TextView
                    android:id="@+id/tv_scene_address"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="address"/>
                <TextView
                    android:id="@+id/tv_scene_far"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brown_deep"
                    android:textSize="10sp"
                    android:text="距离30千米"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/logo_ticket"/>
                    <TextView
                        android:id="@+id/tv_scene_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/MyThemeColor"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="ticket"/>
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/logo_clock"/>
                    <TextView
                        android:id="@+id/tv_scene_openTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="open Time"/>
                 </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>